<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numText1"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:editable="false"
        android:ems="10"
        android:hint="Enter Number:"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/numText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/numText2"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Enter Number:"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numText1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginBottom="66dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numText2">

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:onClick="sum"
            android:text="+"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="246dp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:onClick="sub"
            android:text="-"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="246dp" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:onClick="multi"
            android:text="x"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="246dp" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:onClick="div"
            android:text="รท"
            tools:layout_editor_absoluteX="266dp"
            tools:layout_editor_absoluteY="246dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="32dp"
        android:text="CALCULATOR"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/numText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:layout_marginBottom="138dp"
        android:onClick="result"
        android:text="Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>